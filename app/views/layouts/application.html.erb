    </div>
  </header>

  <body>
    <% if flash[:notice] %>
     <p id="notice"><%= flash[:notice] %></p>
   <% end %>
   <% if flash[:alert] %>
     <p id="alert"><%= flash[:alert] %></p>
   <% end %>
    <%= yield %>
  </body>
